{
  "name": "appauth-javascript",
  "version": "0.1.0",
  "description": "A general purpose OAuth client.",
  "main": "built/app/bundle.js",
  "scripts": {
    "preapp": "npm run-script watch",
    "app": "watchify built/app/index.js -o built/app/bundle.js & http-server -p 8000",
    "prenode-app": "npm run-script compile",
    "node-app": "node ./built/node_app/index.js",
    "prebuild-app": "npm run-script compile",
    "build-app": "browserify built/app/index.js -o built/app/bundle.js",
    "preminify": "npm run-script build-app",
    "minify": "java -jar node_modules/google-closure-compiler/compiler.jar --compilation_level ADVANCED_OPTIMIZATIONS --js built/app/bundle.js --js_output_file built/app/bundle_minified.js",
    "precompile": "npm run-script clean && npm run-script format",
    "compile": "node_modules/typescript/bin/tsc",
    "format": "clang-format -i -style=file src/**.ts",
    "clean": "rm -rf built/**/*.js",
    "pretest": "npm run-script compile",
    "test": "node_modules/karma/bin/karma start karma.conf --browsers=Chrome --single-run=false --debug",
    "pregzipSize": "npm run-script minify",
    "gzipSize": "gzip -c built/app/bundle_minified.js | wc -c",
    "prewatch": "npm run-script format",
    "watch": "node_modules/typescript/bin/tsc --watch &"
  },
  "repository": {
    "type": "git",
    "url": "rpc://team/appauth/AppAuthJS"
  },
  "keywords": [
    "OAuth",
    "AppAuth",
    "JavaScript",
    "Node"
  ],
  "author": "rahulrav@google.com",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.1.0",
    "clang-format": "^1.0.49",
    "google-closure-compiler": "^20160911.0.0",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.5.1",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "typescript": "^2.2.2",
    "typings": "^2.1.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "form-data": "^2.1.2",
    "hapi": "^16.1.0",
    "opener": "^1.4.2",
    "request": "^2.79.0",
    "typescript": "^2.3.1"
  }
}
